{
    "include": ["./src"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "typeRoots": ["@types"],
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
